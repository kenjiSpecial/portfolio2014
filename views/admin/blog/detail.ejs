<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= page %></title>

    <link rel="stylesheet" href="../../bootstrap/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="../../styles/admin/<%= page %>.css"/>

    <script src="../../scripts/vendors/ejs.js"></script>

    <script src="../../bower_components/jquery/jquery.min.js"></script>
    <script src="../../bower_components/underscore/underscore-min.js"></script>
    <script src="../../bower_components/backbone/backbone-min.js"></script>
</head>
<body>


<header id="admin-header" class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" data-toggle="collapse" data-target=".navbar-collapse" class="navbar-toggle">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-static-top">

                <% if(page == 'home'){ %>
                <li id="admin-home" class="active"><a href="../home">HOME</a></li>
                <% }else{ %>
                <li id="admin-home"><a href="../home">HOME</a></li>
                <% } %>

                <% if(page == 'about'){ %>
                <li id="admin-about" class="active"><a href="../about">ABOUT</a></li>
                <% }else{ %>
                <li id="admin-about"><a href="../about">ABOUT</a></li>
                <% } %>

                <% if(page == 'work'){ %>
                <li id="admin-work" class="active"><a href="../work">WORKS</a></li>
                <% }else{ %>
                <li id="admin-work"><a href="../work">WORKS</a></li>
                <% } %>

                <% if(page == 'experiment'){ %>
                <li id="admin-experiment" class="active"><a href="../experiment">EXPERIMENTS</a></li>
                <% }else{ %>
                <li id="admin-experiment"><a href="../experiment">EXPERIMENTS</a></li>
                <% } %>

                <% if(page == 'blog'){ %>
                <li id="admin-blog" class="active"><a href="../blog">BLOG</a></li>
                <% }else{ %>
                <li id="admin-blog"><a href="../blog">BLOG</a></li>
                <% } %>

                <% if(page == 'bookmark'){ %>
                <li id="admin-bookmark" class="active"><a href="../bookmark">BOOKMARK</a></li>
                <% }else{ %>
                <li id="admin-bookmark"><a href="../bookmark">bookmark</a></li>
                <% } %>

            </ul>
        </div>
    </div>
</header>

<div id="admin-blog-list-container" class="container main-container">
    <div id="admin-detail-blog-container" class="row">
        <div id="blog-create-warning"></div>
        <form role="form">
            <div class="form-group">
                <label for="exampleInputEmail1">Title</label>
                <input type="text" class="form-control" id="blogTitleInput" placeholder="Enter title"
                       value="<%= title %>">
            </div>


            <div class="form-group">
                <label for="exampleInputFile">Image</label>

                <div id="blog-image" class="col-md-12">
                    <div class="thumbnail">
                        <img id="blog-thumbnail" data-thumbnail="<%= thumbnail %>"
                             src="../../images/blog/<%= thumbnail %>" alt="...">
                    </div>
                </div>

                <div class="blog-image-input-file">
                    <button class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Choose
                    </button>
                </div>
            </div>


            <div class="form-group">
                <label for="exampleContent">content</label>
                <textarea class="form-control" id="blogContentInput" rows="20"><%= content %></textarea>
            </div>

            <button type="submit" class="btn btn-primary" id="update-blog-post">UPDATE</button>
        </form>
    </div>
</div>

<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" id="blog-album-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title" id="myLargeModalLabel">Albums</h4>
            </div>

            <div class="modal-body">
                <div class="row">

                    <div class="col-md-3">

                        <form method="post" action="/admin/blog-upload-photo-update/<%= id %>" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="file" name="image" id="exampleInputFile">
                            </div>
                            <button type="submit" class="btn btn-default">Submit</button>
                        </form>

                    </div>


                    <div class="col-md-9">
                        <div class="row">

                            <%
                            if(albums){
                                    for(var i = 0; i < albums.length; i++){
                                var albumName = albums[i].name;
                            %>
                            <div class="col-md-4">
                                <% if( thumbnail == albumName) { %>
                                    <div class="thumbnail blog-thumbnail selected">
                                        <img src="../../images/blog/<%= albumName %>" alt="...">
                                    <% }else{ %>

                                    <div class="thumbnail blog-thumbnail">
                                        <a href="./<%= id %>?image=<%= albumName %>">
                                            <img src="../../images/blog/<%= albumName %>" alt="...">
                                        </a>
                                    <% } %>

                                    </div>
                             </div>
                            <% }} %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="../../bootstrap/js/bootstrap.js"></script>
<script src="../../scripts/admin/blog/updateView.js"></script>


</body>
</html>

